

<style>
  #shopify-section-{{ section.id }} .lm-space {
    height: {{ section.settings.height }}px;
    display: block;
  }
  
  @media only screen and (max-width: 1023px) {
    #shopify-section-{{ section.id }} .lm-space {
      height: {{ section.settings.medium_screen_height }}px;
    }
  }
  
  @media only screen and (max-width: 767px) {
    #shopify-section-{{ section.id }} .lm-space {
      height: {{ section.settings.small_screen_height }}px;
    }
  }  


</style>

<div class="lm-sections lm-space {{section.settings.class}}"></div>

