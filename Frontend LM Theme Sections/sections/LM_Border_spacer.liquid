<style>
  #shopify-section-{{ section.id }} .lm-border-space{
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ section.settings.border_top_padding }}px 15px {{ section.settings.border_Bottom_padding }}px ;
  }
  #shopify-section-{{ section.id }} .Lm_border-left{
    width: 50%;
    height: {{ section.settings.border_width }}px;
    display: block;
    background-color: {{ section.settings.bg_color }};
  }
  #shopify-section-{{ section.id }} .Lm_border-right{
    width: 50%;
    height:{{ section.settings.border_width }}px;
    display: block;
    background-color: {{ section.settings.bg_color }};
  }
  #shopify-section-{{ section.id }} .Lm_border-image{
    padding: 15px;
  }
  #shopify-section-{{ section.id }} .Lm_border-image svg{
    height: 30px;
    width: 30px;
    fill:  {{ section.settings.bg_color }};
  }

  #shopify-section-{{ section.id }} .Lm_border-image svg path{
    fill:  {{ section.settings.bg_color }};
  }
  @media only screen and (max-width: 1023px) {
    /* Add any necessary styles for screen widths below 1023px */
  }
  
  @media only screen and (max-width: 767px) {
    /* Add any necessary styles for screen widths below 767px */
  }  
</style>

<div class="lm-sections lm-border-space {{ section.settings.class }}">
  <span class="Lm_border-left"></span>
  <span class="Lm_border-image">{{ section.settings.svg_path }}</span>
  <span class="Lm_border-right"></span>
</div>

